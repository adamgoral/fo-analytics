# Application Settings
APP_NAME="Front Office Analytics Platform"
APP_VERSION="0.1.0"
DEBUG=False
ENVIRONMENT=development

# API Settings
API_PREFIX="/api/v1"

# Database
DATABASE_URL=postgresql+asyncpg://fo_user:fo_password@localhost:5432/fo_analytics

# Redis
REDIS_URL=redis://localhost:6379/0

# RabbitMQ
RABBITMQ_URL=amqp://fo_user:fo_password@localhost:5672/

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Authentication
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# File Upload
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes
ALLOWED_FILE_EXTENSIONS=[".pdf", ".txt", ".doc", ".docx"]

# MinIO/S3 Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=fo-analytics-documents
MINIO_USE_SSL=False
MINIO_REGION=us-east-1

# When using Docker Compose, use these settings instead:
# MINIO_ENDPOINT=minio:9000

# LLM Provider Configuration
LLM_PROVIDER=anthropic  # Options: anthropic, openai, gemini
LLM_MODEL=claude-3-5-sonnet-20241022  # Model name for the selected provider
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096
LLM_TIMEOUT=60

# API Keys for LLM Providers (set the one you plan to use)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
GOOGLE_API_KEY=your-google-api-key-here